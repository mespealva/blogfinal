<%= form_with url: appointment_create_path, local: true do |form| %>
  <%= form.hidden_field :slot_id, id: 'slot-id' %>
  <div class="form-group">
    <label for="coach-name">abogado:</label>
    <%= form.text_field :lawyer_name, id: 'lawyer-name', class: 'form-control', disabled: true %>
  </div>
  <div class="form-group">
    <label for="slot-time">Cita:</label>
    <%= form.text_field :appointment, id: 'appointment', class: 'form-control', disabled: true %>
  </div>
  <div class="form-group">
    <%= form.submit 'Agendar', class: "btn btn-md btn-primary btn-block" %>
  </div>
<% end %>