<p id="notice"><%= notice %></p>

<h1>Articules</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articules.each do |articule| %>
      <tr>
        <td><%= articule.title %></td>
        <td><%= articule.content %></td>
        <td><%= articule.user %></td>
        <td><%= link_to 'Show', articule %></td>
        <td><%= link_to 'Edit', edit_articule_path(articule) %></td>
        <td><%= link_to 'Destroy', articule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Articule', new_articule_path %>
